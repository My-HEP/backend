// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  uid       String  @unique
  lastName  String?
  firstName String?
  phone     Int
  email     String  @unique
  therapist String?  // therapist uid
  role      Role    @default(PATIENT)
  hepExercises HEPExercise[]
}

model Exercise {
  id  Int @id @default(autoincrement())
  url String?
  tag String?
  title String
  heps HEPExercise[]
}

model HEPExercise {
  // could this be an implicit relation instead of explicit?
  exercise  Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId Int
  user User @relation(fields: [userId], references: [uid]) // patient uid
  userId String
  frequency String?
  duration  String?
  notes String?
  // maybe we could pull the therapistID from the user relationship? like user.therapist or whatever the
  // syntax would be?
  // therapist User? @relation(fields: [therapistId], references: [uid])    // therapist uid
  // therapistId String
  assignedBy String?
  @@id([userId, exerciseId])
}

enum Role {
  THERAPIST
  PATIENT
}
