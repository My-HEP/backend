// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  uid       String? @unique
  lastName  String?
  firstName String?
  phone     Int
  email     String  @unique
  role      Role    @default(PATIENT)
  hepExercises HEPExercise[]
  assigner HEPExercise? @relation("Therapist")
}

model Exercise {
  id  String @id @default(uuid())
  url String?
  tags Tag[]
  title String
  heps HEPExercise[]
}

model Tag {
  id  Int @id @default(autoincrement())
  title String @unique
  exercise  Exercise[]
}

model HEPExercise {
  // could this be an implicit relation instead of explicit?
  exercise  Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId String
  patient User @relation(fields: [patientId], references: [id]) // patient uid
  patientId Int
  frequencyByDay String?
  frequencyByWeek String?
  duration  String?
  durationUnits String?
  notes String?
  assignedBy User @relation(name: "Therapist", fields: [assignedById], references: [id])
  assignedById Int @unique
  @@id([patientId, exerciseId])
}

enum Role {
  THERAPIST
  PATIENT
}
